{% extends 'base_admin_content.html.twig' %}

{% block content %}
    <h1 class="mt-4">Создание статьи</h1>
    {% include 'form/article_generation_form.html.twig' with {
        articleForm: articleForm,
        errors: errors,
        isBlocked: isBlocked
    } %}

    <hr>

    {% if article %}
        <h2 class="mt-4">Ваша статья</h2>

        <hr>

        <div class="row">

            <div class="col-xl-6">
                <h1 class="mt-4">{{ article.title }}</h1>
                {{ article.body|raw }}
            </div>
        </div>
    {% endif %}
{% endblock %}
