{% extends 'base_admin_content.html.twig' %}

{% block content %}
    <h1 class="mt-4">Профиль</h1>
    <div class="row">

        <div class="col-xl-6">
            <div class="alert alert-success" role="alert">
                Профиль успешно изменен
            </div>
            {# Выводим ошибки формы #}
            {% if errors.count %}
                {% include 'components/error.html.twig' with {errors: errors} %}
            {% endif %}

            <div class="card my-4">
                <div class="card-body">

                    <p>Ваш API токен: asft21sfsvzxvghk1912t1g12m</p>
                    <button class="btn btn-outline-primary">Создать новый</button>
                </div>
            </div>

            {{ form_start(userForm) }}
            <div class="form-label-group">
                {{ form_widget(userForm.firstName, {
                    attr: {placeholder: 'Ваше имя'}
                }) }}
                {{ form_label(userForm.firstName, 'Ваше имя', {
                    errors: null
                }) }}
            </div>
            <div class="form-label-group">
                {{ form_widget(userForm.email, {
                    attr: {placeholder: 'Ваш Email'}
                }) }}
                {{ form_label(userForm.email, 'Ваш Email', {
                    errors: null
                }) }}
            </div>

            <div class="form-label-group">
                {{ form_widget(userForm.planePassword, {
                    attr: {placeholder: 'Пароль'}
                }) }}
                {{ form_label(userForm.planePassword, 'Пароль', {
                    errors: null
                }) }}
            </div>

            <div class="form-label-group">
                {{ form_widget(userForm.confirmPassword, {
                    attr: {placeholder: 'Подтверждение пароля'},
                    errors: false
                }) }}
                {{ form_label(userForm.confirmPassword, 'Подтверждение пароля', {
                    errors: null
                }) }}
            </div>

            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Изменить</button>
            {{ form_end(userForm) }}
        </div>
    </div>
{% endblock %}
