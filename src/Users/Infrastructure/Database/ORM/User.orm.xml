<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">

    <entity
            name="App\Users\Domain\Entity\User"
            table="`user`"
            repository-class="App\Repository\UserRepository"
    >
        <id name="id" type="integer" length="11">
            <generator strategy="AUTO" />
        </id>
        <field name="email" type="string" length="180" unique="true" nullable="false"/>
        <field name="roles" type="json" nullable="false"/>
        <field name="password" type="string" length="255"  nullable="false"/>
        <field name="firstName" type="string" length="255" nullable="false"/>
        <field name="isEmailConfirmed" type="boolean" nullable="false"/>
        <field name="createdAt" type="datetime" nullable="false"/>
        <gedmo:timestampable field="createdAt" on="create"/>
        <field name="updatedAt" type="datetime" nullable="false"/>
        <gedmo:timestampable field="updatedAt" on="update"/>
        <field name="expireAt" type="datetime" nullable="false"/>
        <many-to-one field="subscription" target-entity="App\Entity\Subscription" inversed-by="users">
            <join-column nullable="false"/>
        </many-to-one>
        <one-to-one field="apiToken" target-entity="App\Users\Domain\Entity\ApiToken" mapped-by="client">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-one>
        <one-to-many field="modules" target-entity="App\Entity\Module" mapped-by="client" />
        <one-to-many field="articles" target-entity="App\Entity\Article" mapped-by="client" />
    </entity>

</doctrine-mapping>